<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
    android:id="@+id/constBtn1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="btn 1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/constBtn2"/>

    <Button
        android:id="@+id/constBtn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="btn 2"
        app:layout_constraintEnd_toStartOf="@id/constBtn3"
        app:layout_constraintStart_toEndOf="@id/constBtn1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/constBtn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="btn 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/constBtn2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>